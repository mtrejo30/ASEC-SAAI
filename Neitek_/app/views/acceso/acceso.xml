						id="nombres" text="" returnPress="focusPassword"
						autocorrect="false" row="0"  class="cajitas"/>
			<label class="labels" text="Apellidos:" textWrap="true" />
			<text-field
						id="app" text="" returnPress="focusPassword"
						autocorrect="false" row="0"  class="cajitas"/>
			<label class="labels" text="Domicilio" textWrap="true" />
			<text-field
						id="domicilio" text="" returnPress="focusPassword"
						autocorrect="false" row="0"  class="cajitas"/>
			<button text="Registrar" tap="login_" id="submit-button1" textWrap="true"  />
